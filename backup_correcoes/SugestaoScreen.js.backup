          <View style={styles.categoriaContainer}>
            {categorias.map((cat) => (
              <TouchableOpacity
                key={cat}
                style={[
                  styles.categoriaButton,
                  categoria === cat && styles.categoriaButtonSelected
                ]}
                onPress={() => setCategoria(cat)}
